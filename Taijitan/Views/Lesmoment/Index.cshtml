@model IEnumerable<Taijitan.Models.Domain.Lesmoment>

<h2>Geplande lesmomenten</h2>

@if (Model.Count() == 0)
{
    <p>Er zijn geen geplande lesmomenten</p>
}
else
{
    <table class="table table-striped">
        <thead class="bg-primary">
            <tr class="bg-primary">
                <td colspan="2"><b>Datum</b></td>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Datum.ToString()</td>
                <td><a class="btn btn-default" asp-controller="Lesmoment" asp-action="Start" asp-route-id="@item.LesmomentId">Start Sessie</a></td>
            </tr>
        }
    </table>
}
