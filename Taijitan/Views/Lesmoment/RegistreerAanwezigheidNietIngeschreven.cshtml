@model Taijitan.Models.LesmomentViewModels.LesmomentNietIngeschrevenViewModel

<h2>Sessie op @Model.Lesmoment.StartTijd.ToString("dd/MM/yyyy") om @Model.Lesmoment.StartTijd.ToString("HH:mm")</h2>
<h3>Leden</h3>
<table class="table table-striped">
    <thead class="bg-primary">
        <tr class="bg-primary">
            <td><b>Gebruikersnaam</b></td>
            <td><b>Voornaam</b></td>
            <td><b>Achternaam</b></td>
            <td><b>Aanwezigheid</b></td>
        </tr>
    </thead>
    @foreach (var item in Model.Gebruikers)
    {
    <tr>
        <td>@item.Gebruikersnaam </td>
        <td>@item.Voornaam </td>
        <td>@item.Naam </td>
           @{var parms = new Dictionary<string, string> { { "lesmomentId", Model.Lesmoment.LesmomentId.ToString() }, { "gebruikersnaam", item.Gebruikersnaam} };}
        <td><a class="btn btn-default" asp-route="registreeraanwezigheid" asp-all-route-data="parms">Registreer aanwezigheid</a></td>           
    </tr>
    }
</table>
<div class="form-group col-md-12 text-center">
    <a asp-controller="Lesmoment" asp-action="Start" class="btn btn-default" asp-route-id="@Model.Lesmoment.LesmomentId">Keer terug</a>
</div>

